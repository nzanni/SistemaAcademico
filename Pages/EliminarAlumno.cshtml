@page
@model SistemaAcademico.Pages.EliminarAlumnoModel
@{
}


<input type="hidden" asp-for="oAlumno.Id">

<form method="post">

	<h4>¿Estás seguro de que queres eliminar este Alumno?</h4>

	<div>
		<strong>Nombre: </strong> @Model.oAlumno.Nombre
	</div>
	<div>
		<strong>Apellido: </strong> @Model.oAlumno.Apellido
	</div>
	<div>
		<strong>DNI: </strong> @Model.oAlumno.DNI
	</div>
	<div>
		<strong>Email </strong> @Model.oAlumno.Email
	</div>
	<div>
		<strong>Fecha de Nacimiento: </strong> @Model.oAlumno.FechaDeNacimiento
	</div>

	<br />

	<button type="submit" class="btn btn-danger">Eliminar</button>
	<a asp-page="TablaCarreras" class="btn btn-secondary">Cancelar</a>
</form>