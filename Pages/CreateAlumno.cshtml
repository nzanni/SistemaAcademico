@page
@model SistemaAcademico.Pages.CreateAlumnoModel
@{
}
<form method="post">

    <div class="form-group">
        <label asp-for="oAlumno.Id"></label>
        <input asp-for="oAlumno.Id" class="form-control" />

    </div>

    <div class="form-group">
        <label asp-for="oAlumno.Nombre">Nombre</label>
        <input asp-for="oAlumno.Nombre" class="form-control" />
        <span asp-validation-for="oAlumno.Nombre" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="oAlumno.Apellido">Apellido</label>
        <input asp-for="oAlumno.Apellido" class="form-control" />
        <span asp-validation-for="oAlumno.Apellido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="oAlumno.DNI">DNI</label>
        <input asp-for="oAlumno.DNI" class="form-control" />
        <span asp-validation-for="oAlumno.DNI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="oAlumno.Email">Email</label>
        <input asp-for="oAlumno.Email" class="form-control" />
        <span asp-validation-for="oAlumno.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="oAlumno.FechaDeNacimiento">Fecha de nacimiento</label>
        <input asp-for="oAlumno.FechaDeNacimiento" class="form-control" />

    </div>

    <br />
    <button type= "submit" class ="btn btn-primary">Guardar</button>
</form>