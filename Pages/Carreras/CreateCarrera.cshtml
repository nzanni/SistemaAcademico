@page
@model SistemaAcademico.Pages.CreateCarreraModel
@{
}

<form method="post">


	<div class="form-group">
		<label asp-for="oCarrera.Nombre">Nombre</label>
		<input asp-for="oCarrera.Nombre" class="form-control"/>
		<span asp-validation-for="oCarrera.Nombre" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="oCarrera.DuracionAnios">Duración en años</label>
		<input asp-for="oCarrera.DuracionAnios" class="form-control" />
		<span asp-validation-for="oCarrera.DuracionAnios" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="oCarrera.TituloOtorgado">Titulo Otorgado</label>
		<input asp-for="oCarrera.TituloOtorgado" class="form-control" />
		<span asp-validation-for="oCarrera.TituloOtorgado" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="oCarrera.Modalidad"></label>
		<select asp-for="oCarrera.Modalidad"
				asp-items="@(new SelectList(Model.Modalidades))"
				class="form-control">
			<option value="">Seleccione una opción</option>
		</select>
		<span asp-validation-for="oCarrera.Modalidad" class="text-danger"></span>
	</div>
	<br />
	<button type="submit" class="btn btn-primary">Guardar</button>

</form>