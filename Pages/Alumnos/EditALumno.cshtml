@{
}


<form method="post">

	<input type="hidden" asp-for="oAlumno.Id">

	<div class="form-group">
		<label asp-for="oAlumno.Nombre"></label>
		<input asp-for="oAlumno.Nombre" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="oAlumno.Apellido"></label>
		<input asp-for="oAlumno.Apellido" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="oAlumno.DNI"></label>
		<input asp-for="oAlumno.DNI" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="oAlumno.Email"></label>
		<input asp-for="oAlumno.Email" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="oAlumno.FechaDeNacimiento"></label>
		<input asp-for="oAlumno.FechaDeNacimiento" class="form-control" />
